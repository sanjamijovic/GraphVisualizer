<?import javafx.geometry.Insets?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="openMenu" mnemonicParsing="false" onAction="#open" text="Open">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="exportMenu" mnemonicParsing="false" onAction="#save" text="Save">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#undo" text="Undo">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#redo" text="Redo">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Y" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem />
                  <MenuItem mnemonicParsing="false" onAction="#selectAll" text="Select All">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#delete" text="Delete">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="BACK_SPACE" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#zoomIn" text="Zoom in">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="PLUS" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#zoomOut" text="Zoom out">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="MINUS" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem />
                        <MenuItem mnemonicParsing="false" text="Vertex degree based formatting" />
                  <CheckMenuItem fx:id="checkLabels" mnemonicParsing="false" onAction="#showLabels" text="Show labels" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <Pane fx:id="canvasPane" BorderPane.alignment="CENTER">
            <MainCanvas fx:id="canvas" />
        </Pane>
    </center>
    <right>
        <SplitPane dividerPositions="0.3089430894308943" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
            <items>
                <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="100.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Number of Nodes:" />
                        <Label fx:id="numNodes" layoutX="14.0" layoutY="31.0" text="0" />
                        <Label layoutX="14.0" layoutY="58.0" text="Number of Edges:" />
                        <Label fx:id="numEdges" layoutX="14.0" layoutY="75.0" text="0" />
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <ComboBox fx:id="algorithmChooser" layoutX="4.0" layoutY="7.0" prefWidth="150.0" promptText="Choose an algorithm">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Expansion/Contraction" />
                                    <String fx:value="Force Atlas" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Label layoutX="4.0" layoutY="43.0" text="Scale:" />
                        <TextField fx:id="scale" layoutX="61.0" layoutY="38.0" prefHeight="27.0" prefWidth="93.0" />
                        <Button layoutX="4.0" layoutY="72.0" mnemonicParsing="false" onAction="#startThread" text="Start" textFill="#1dd026" />
                        <Button layoutX="74.0" layoutY="72.0" mnemonicParsing="false" onAction="#stopThread" text="Stop" textFill="#ee0707" />
                        <Label layoutX="4.0" layoutY="118.0" text="Selected:" />
                        <TextArea fx:id="selectedItem" editable="false" layoutX="7.0" layoutY="138.0" prefHeight="121.0" prefWidth="146.0" wrapText="true" />
                        <Button layoutX="4.0" layoutY="268" mnemonicParsing="false" onAction="#createEdge" text="Create edge" />
                        <Label layoutX="4.0" layoutY="314.0" text="Shortest path:" />
                        <TextArea fx:id="path" editable="false" layoutX="7.0" layoutY="334.0" prefHeight="121.0" prefWidth="146.0" wrapText="true" />
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </right>
    <bottom>
        <Pane prefHeight="68.0" prefWidth="595.0" BorderPane.alignment="BOTTOM_CENTER">
            <children>
                <ComboBox fx:id="changeType" layoutX="32.0" layoutY="21.0" promptText="Choose type...">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Element" />
                            <String fx:value="Label" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <ColorPicker fx:id="colorPicker" layoutX="194.0" layoutY="21.0" />
                <Separator prefHeight="5.0" prefWidth="2000.0" />
                <ComboBox fx:id="sizeChooser" layoutX="357.0" layoutY="21.0" prefWidth="150.0" promptText="Choose size percentage...">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="50%" />
                            <String fx:value="75%" />
                            <String fx:value="125%" />
                            <String fx:value="150%" />
                            <String fx:value="200%" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button layoutX="520.0" layoutY="21.0" mnemonicParsing="false" onAction="#change" text="Change" />
                <Button layoutX="800.0" layoutY="21.0" mnemonicParsing="false" onAction="#delete" text="Delete" />
                <Button layoutX="900.0" layoutY="21.0" mnemonicParsing="false" onAction="#shortestPath" text="Shortest path" />
            </children>
        </Pane>
    </bottom>
   <left>
      <SplitPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <TabPane fx:id="formattingTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab text="Node">
                      <VBox spacing="10" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                          <padding>
                              <Insets top="5" left="5" right="5" bottom="5"/>
                          </padding>
                          <ColorPicker fx:id="nodeFormattingColorPicker"/>
                          <Button text="Apply color formatting" onAction="#nodeColorFormatting"/>
                          <Label text="Min size:"/>
                          <TextField fx:id="nodeMinSize"/>
                          <Label text="Max size:"/>
                          <TextField fx:id="nodeMaxSize"/>
                          <Button text="Apply size formatting" onAction="#nodeSizeFormatting"/>
                      </VBox>
                  </Tab>
                  <Tab text="Label">
                      <VBox minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" spacing="10.0">
                          <padding>
                              <Insets top="5" left="5" right="5" bottom="5"/>
                          </padding>
                      <ColorPicker fx:id="labelFormattingColorPicker"/>
                      <Button text="Apply color formatting" onAction="#labelColorFormatting"/>
                      <Label text="Min size:"/>
                          <TextField fx:id="labelMinSize"/>
                      <Label text="Max size:"/>
                          <TextField fx:id="labelMaxSize"/>
                      <Button text="Apply size formatting" onAction="#labelSizeFormatting"/>
                      </VBox>
                  </Tab>
              </tabs>
            </TabPane>
      </SplitPane>
   </left>
</BorderPane>
